<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/white"
        />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btBreak"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="返   回"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <View
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="@color/back" />
        <Button
            android:id="@+id/btread"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="模式1：身份证读取"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <View
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="@color/back" />

        <Button
            android:id="@+id/uidread"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="读身份证UID"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <View
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="@color/back" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/back" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">
        <Button
            android:id="@+id/icread"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="读IC卡"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="@color/back" />

        <Button
            android:id="@+id/icwrite"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="写IC卡"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <View
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="@color/back" />
        <Button
            android:id="@+id/icpassword"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="修改IC卡密码"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.2px"
        android:background="@color/back" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_cishu"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="身份证读卡次数：0"
            android:textColor="@color/back"
            android:textSize="20sp"
            android:gravity="center"
            tools:ignore="HardcodedText" />
        <View
            android:layout_width="1.2px"
            android:layout_height="match_parent"
            android:background="@color/back" />
        <Button
            android:id="@+id/emptyBt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btnselector"
            android:text="复位"
            android:textColor="@color/back"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="30dip"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/face"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="身份证信息显示"
                android:textColor="@color/back"
                android:textSize="16sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <RadioButton
                    android:id="@+id/typea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="TYPE A"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="25sp"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/typeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TYPE B"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第   "
                    android:textSize="16sp"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
                <Spinner
                    android:id="@+id/spDwon"
                    android:layout_width="76dp"
                    android:layout_height="70dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:dropDownVerticalOffset="50dp"
                    android:theme="@style/SpnStyle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   扇区"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡号："
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    android:textColor="@color/back"
                    />
                <EditText
                    android:id="@+id/etId"
                    android:layout_width="450dp"
                    android:layout_height="50dp"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
                    tools:ignore="LabelFor"
                    android:inputType="text"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一区块："
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    android:textColor="@color/back"
                    />
                <EditText
                    android:id="@+id/etBlock"
                    android:layout_width="450dp"
                    android:layout_height="50dp"
                    android:digits="0123456789abcdefABCDEF"
                    android:maxLength="32"
                    tools:ignore="LabelFor"
                    android:inputType="text"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二区块："
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    android:textColor="@color/back"
                    />
                <EditText
                    android:id="@+id/etBlock2"
                    android:layout_width="450dp"
                    android:layout_height="50dp"
                    android:digits="0123456789abcdefABCDEF"
                    android:maxLength="32"
                    tools:ignore="LabelFor"
                    android:inputType="text"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第三区块："
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    android:textColor="@color/back"
                    />
                <EditText
                    android:id="@+id/etBlock3"
                    android:layout_width="450dp"
                    android:layout_height="50dp"
                    android:maxLength="32"
                    android:inputType="text"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第四区块(密码区)："
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    android:textColor="@color/back"
                    />
                <EditText
                    android:id="@+id/etBlock4"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:digits="0123456789abcdefABCDEF"
                    android:maxLength="12"
                    tools:ignore="HardcodedText,LabelFor"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:hint="请输入密码"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>